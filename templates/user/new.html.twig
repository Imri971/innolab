{% extends 'base.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
 <div class="col-lg-9 ml-auto mr-auto mt-5">
    {% if not app.user %}
      
    <h1 class="text-center mt-4 mb-5">Bienvenue sur Innolab</h1>

    {{ include('user/_form.html.twig') }}

    <a href="{{ path('user_index') }}">back to list</a>
    {% else %}
         <h1>Vous êtes connecté actuellement {{app.user.name}}</h1>
         <p> <a href="{{path('app_logout')}}">Déconnectez-vous</a> de votre session actuelle pour ouvrir une nouvelle session.</p>
    {% endif %}
    </div>
{% endblock %}
{% block footerPosition %}{% if app.user %}footerAbsolute{% endif %}{% endblock %}