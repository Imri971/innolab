{% extends 'base.html.twig' %}

 {% block banner %} 
    <div class="container banner d-block">
        <h1 class="banner__title " >Programmes</h1>
    </div>
    {% endblock %}
{% block body %}
<div class="flex-wrap d-flex mb-5 col-12">
    
    {% for programme in programmes %}
    <div class="card bg-light ml-auto mr-auto mb-3 col-lg-3 col-md-8 col-sm-10">
        <div class="card-header">Header</div>
        <div class="card-body">
            <h4 class="card-title">{{ programme.Name }}</h4>
            <p class="card-text">{{ programme.description }}</p>
        </div>
        <a href="{{path('program_show', {'id': programme.id})}}" class="btn btn-light">Choisir ce programme</a>
    </div>
    
    {% endfor %}
   </div>
    
    
{% endblock %}